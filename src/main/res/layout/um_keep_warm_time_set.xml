<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:paddingTop="@dimen/set_item_padding_top"
	android:paddingBottom= "@dimen/set_item_padding_bottom"
    >
    
    <ImageView 
        android:id="@+id/icon"
        android:src="@drawable/alarm_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
		android:layout_marginLeft="@dimen/set_item_padding_left"
        />
    <TextView 
        android:id="@+id/title"
		android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:textColor="@color/text_title_color"
        android:textSize="@dimen/set_title_size"
        android:text="@string/title_keep_warm_time"
        />
     <TextView 
        android:id="@+id/desc"
		 android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_desc_color"
        android:textSize="@dimen/set_desc_size"
        />
     
       <SeekBar 
	        android:id="@+id/seekbar"
	        android:layout_below="@id/desc"
	        android:layout_marginTop="10dp"
	        style="@style/Widget.SeekBar.Normal"
	        android:max="110"
		   android:layout_alignParentLeft="true"
		   android:layout_marginLeft="40dp"
		   android:layout_marginRight="17dp"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" 
       	/> 

       <TextView 
            android:layout_alignParentLeft="true" 
	        android:layout_below="@id/seekbar"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/text_desc_color"
	        android:textSize="@dimen/set_desc_size"
		   android:layout_marginLeft="50dp"
	        android:text="@string/time_seekbar_min_desc"
	        />
       <TextView 
            android:layout_alignParentRight="true"
		   android:layout_marginRight="@dimen/set_item_padding_right"
	        android:layout_below="@id/seekbar"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/text_desc_color"
	        android:textSize="@dimen/set_desc_size"
		   android:text="@string/time_seekbar_max_desc"
	        />

</RelativeLayout>
